// tsconfig.json
{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
	  "baseUrl": "./",
	  "module": "esnext",
	  "target": "es2017",
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "allowJs": true,
	  "checkJs": false,
	  "skipLibCheck": true,
	  "strict": true,
	  "resolveJsonModule": true,
	  "forceConsistentCasingInFileNames": true,
	  "paths": {
		"*": ["types/*"]
	  }
	},
	"include": ["src/**/*", "types/**/*"],
  }
  